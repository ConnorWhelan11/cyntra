{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Glia Fab Desktop",
  "version": "0.1.0",
  "identifier": "com.gliafab.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Glia Fab Desktop",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png"],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}

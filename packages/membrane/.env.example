# Membrane Service Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Server Configuration
# =============================================================================

# Port to listen on (default: 7331)
MEMBRANE_PORT=7331

# Environment mode: development, production, test (default: development)
NODE_ENV=development

# Enable verbose logging (default: true in development)
MEMBRANE_VERBOSE=true

# =============================================================================
# EVM Chain Configuration (for EAS Attestations)
# =============================================================================

# Chain for attestations: base, base-sepolia, optimism, optimism-sepolia
MEMBRANE_CHAIN=base-sepolia

# EAS schema UID for RunReceipt attestations (register with register-schemas script)
# MEMBRANE_SCHEMA_UID=0x...

# =============================================================================
# Starknet Configuration (for Cartridge Controller)
# =============================================================================

# Default Starknet chain: SN_MAIN or SN_SEPOLIA (default: SN_SEPOLIA)
MEMBRANE_STARKNET_CHAIN=SN_SEPOLIA

# Custom RPC endpoints (optional, defaults to public Blast API)
# MEMBRANE_STARKNET_MAINNET_RPC=https://starknet-mainnet.public.blastapi.io
# MEMBRANE_STARKNET_SEPOLIA_RPC=https://starknet-sepolia.public.blastapi.io

# Cartridge Keychain URL (default: https://x.cartridge.gg)
# MEMBRANE_KEYCHAIN_URL=https://x.cartridge.gg

# =============================================================================
# IPFS/Filecoin Configuration
# =============================================================================

# w3up space DID for uploads (get from web3.storage)
# MEMBRANE_W3UP_SPACE_DID=did:key:...

# IPFS gateway URL template (default: https://w3s.link/ipfs/{cid})
MEMBRANE_IPFS_GATEWAY=https://w3s.link/ipfs/{cid}

# =============================================================================
# Database Configuration
# =============================================================================

# Custom database path (default: ~/.config/membrane/membrane.db)
# MEMBRANE_DB_PATH=/path/to/membrane.db

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed origins
# In production, this MUST be set explicitly
# In development, defaults to localhost origins
# MEMBRANE_CORS_ORIGINS=http://localhost:1420,http://localhost:5173,tauri://localhost

# Allow credentials (default: true)
MEMBRANE_CORS_CREDENTIALS=true

# =============================================================================
# Rate Limiting Configuration (requests per minute)
# =============================================================================

# General API rate limit (default: 100)
MEMBRANE_RATE_LIMIT_GENERAL=100

# Auth endpoint rate limit (default: 10)
MEMBRANE_RATE_LIMIT_AUTH=10

# Nonce generation rate limit (default: 20)
MEMBRANE_RATE_LIMIT_NONCE=20

# Transaction execution rate limit (default: 30)
MEMBRANE_RATE_LIMIT_EXECUTE=30

# Upload rate limit (default: 5)
MEMBRANE_RATE_LIMIT_UPLOAD=5

# =============================================================================
# Session Configuration
# =============================================================================

# Session duration in milliseconds (default: 86400000 = 24 hours)
MEMBRANE_SESSION_DURATION_MS=86400000

# Nonce expiration in milliseconds (default: 600000 = 10 minutes)
MEMBRANE_NONCE_EXPIRATION_MS=600000

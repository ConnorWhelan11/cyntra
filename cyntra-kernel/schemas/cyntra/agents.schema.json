{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra-kernel/schemas/cyntra/agents.schema.json",
  "title": "Cyntra Universe Agent Catalog",
  "description": "Optional universe-scoped agent profile catalog (v1 draft).",
  "type": "object",
  "required": ["schema_version", "agents"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "agents": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "toolchain": { "type": "string" },
          "default_model": { "type": "string" },
          "role": { "type": "string" },
          "budgets": { "type": "object" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}


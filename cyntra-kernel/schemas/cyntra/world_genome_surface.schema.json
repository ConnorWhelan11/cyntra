{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra-kernel/schemas/cyntra/world_genome_surface.schema.json",
  "title": "Cyntra World Genome Surface",
  "description": "Explicit evolvable parameter surface for a world (v1).",
  "type": "object",
  "required": ["schema_version", "genome_id", "world_id", "genes"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "genome_id": { "type": "string", "minLength": 1 },
    "world_id": { "type": "string", "minLength": 1 },
    "world_config_id": { "type": ["string", "null"] },
    "genes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["key", "kind", "values"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "enum": ["enum"] },
          "values": { "type": "array", "minItems": 1 }
        },
        "additionalProperties": false
      }
    },
    "mutation": {
      "type": "object",
      "properties": {
        "per_candidate": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

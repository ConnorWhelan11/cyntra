{
  "metadata": {
    "name": "CHORD Material Generator",
    "version": "1.0.0",
    "description": "Generates PBR materials using CHORD Turbo"
  },
  "nodes": {
    "1": {
      "class_type": "CheckpointLoaderSimple",
      "inputs": {
        "ckpt_name": "chord_turbo_v1.safetensors"
      }
    },
    "2": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": "{{prompt}}{{style_suffix}}, seamless tileable PBR material texture, 2048x2048",
        "clip": ["1", 1]
      }
    },
    "3": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": "text, watermark, logo, seams visible, repetitive pattern, low quality",
        "clip": ["1", 1]
      }
    },
    "4": {
      "class_type": "EmptyLatentImage",
      "inputs": {
        "width": 2048,
        "height": 2048,
        "batch_size": 1
      }
    },
    "5": {
      "class_type": "KSampler",
      "inputs": {
        "model": ["1", 0],
        "positive": ["2", 0],
        "negative": ["3", 0],
        "latent_image": ["4", 0],
        "seed": "{{seed}}",
        "steps": 9,
        "cfg": 3.5,
        "sampler_name": "lcm",
        "scheduler": "sgm_uniform",
        "denoise": 1.0
      }
    },
    "6": {
      "class_type": "VAEDecode",
      "inputs": {
        "samples": ["5", 0],
        "vae": ["1", 2]
      }
    },
    "7": {
      "class_type": "ImageToNormalMap",
      "inputs": {
        "image": ["6", 0],
        "strength": 1.0,
        "blur": 2
      }
    },
    "8": {
      "class_type": "ImageToRoughnessMap",
      "inputs": {
        "image": ["6", 0],
        "invert": false
      }
    },
    "9": {
      "class_type": "ImageToMetalnessMap",
      "inputs": {
        "image": ["6", 0],
        "threshold": 0.5
      }
    },
    "10": {
      "class_type": "ImageToHeightMap",
      "inputs": {
        "image": ["6", 0],
        "blur": 1
      }
    },
    "11": {
      "class_type": "SaveImage",
      "inputs": {
        "images": ["6", 0],
        "filename_prefix": "mat_{{id}}_basecolor"
      }
    },
    "12": {
      "class_type": "SaveImage",
      "inputs": {
        "images": ["7", 0],
        "filename_prefix": "mat_{{id}}_normal"
      }
    },
    "13": {
      "class_type": "SaveImage",
      "inputs": {
        "images": ["8", 0],
        "filename_prefix": "mat_{{id}}_roughness"
      }
    },
    "14": {
      "class_type": "SaveImage",
      "inputs": {
        "images": ["9", 0],
        "filename_prefix": "mat_{{id}}_metalness"
      }
    },
    "15": {
      "class_type": "SaveImage",
      "inputs": {
        "images": ["10", 0],
        "filename_prefix": "mat_{{id}}_height"
      }
    }
  },
  "outputs": {
    "basecolor": "11",
    "normal": "12",
    "roughness": "13",
    "metalness": "14",
    "height": "15"
  },
  "parameters": {
    "id": {
      "type": "string",
      "required": true
    },
    "prompt": {
      "type": "string",
      "required": true
    },
    "style_suffix": {
      "type": "string",
      "default": ", seamless tileable, top-down view, photorealistic"
    },
    "seed": {
      "type": "integer",
      "default": 42
    }
  }
}

# Environment variables for Logos/Z3 development
# Load with `direnv allow` or `source .envrc`

# Z3 paths (Homebrew on macOS)
export Z3_SYS_Z3_HEADER="/opt/homebrew/opt/z3/include/z3.h"
export BINDGEN_EXTRA_CLANG_ARGS="-I/opt/homebrew/opt/z3/include"

# LEAN 4 paths (if installed via elan)
if [ -d "$HOME/.elan" ]; then
    export PATH="$HOME/.elan/bin:$PATH"
fi

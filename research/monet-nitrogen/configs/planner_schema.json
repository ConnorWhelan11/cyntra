{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlannerOutput",
  "description": "Schema for Monet planner JSON output",
  "type": "object",
  "required": ["timestamp_ms", "intent", "target", "skill", "confidence"],
  "additionalProperties": false,
  "properties": {
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Timestamp in milliseconds"
    },
    "intent": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of tactical intent"
    },
    "target": {
      "type": "object",
      "required": ["type", "ref", "screen_xy"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["enemy", "objective", "cover", "item", "none"]
        },
        "ref": {
          "type": "string",
          "maxLength": 100
        },
        "screen_xy": {
          "type": "array",
          "items": {"type": "number", "minimum": 0, "maximum": 1},
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "constraints": {
      "type": "array",
      "maxItems": 5,
      "default": [],
      "items": {
        "type": "object",
        "required": ["type", "priority", "reason"],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["DO", "DO_NOT", "PREFER", "AVOID_ZONE", "FOCUS_TARGET", "MAX_RISK", "PRIORITIZE_OBJECTIVE"]
          },
          "action": {
            "type": ["string", "null"],
            "enum": ["SHOOT", "MOVE_FORWARD", "MOVE_BACKWARD", "MOVE_LEFT", "MOVE_RIGHT", "JUMP", "DODGE", "INTERACT", "AIM_AT_TARGET", "USE_ABILITY", "SPRINT", "CROUCH", null]
          },
          "until_s": {
            "type": ["number", "null"],
            "minimum": 0,
            "maximum": 10
          },
          "priority": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "reason": {
            "type": "string",
            "maxLength": 100
          },
          "zone_xy": {
            "type": ["array", "null"],
            "items": {"type": "number"},
            "minItems": 2,
            "maxItems": 2
          },
          "zone_radius": {
            "type": ["number", "null"],
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "skill": {
      "type": "object",
      "required": ["mode", "aggression", "stealth"],
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["aggressive", "defensive", "stealth", "balanced"]
        },
        "aggression": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "stealth": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}

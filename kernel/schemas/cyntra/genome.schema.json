{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra/schemas/cyntra/genome.schema.json",
  "title": "Cyntra Prompt Genome",
  "description": "Prompt genome definition for evolution runs",
  "type": "object",
  "required": ["schema_version", "genome_id", "domain", "toolchain", "created_at", "system_prompt"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "cyntra.genome.v1"
    },
    "genome_id": { "type": "string" },
    "domain": { "type": "string" },
    "toolchain": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "parent_id": { "type": ["string", "null"] },
    "system_prompt": { "type": "string" },
    "instruction_blocks": { "type": "array", "items": { "type": "string" } },
    "tool_use_rules": { "type": "array", "items": { "type": "string" } },
    "sampling": { "type": "object" },
    "metadata": { "type": "object" }
  },
  "additionalProperties": false
}

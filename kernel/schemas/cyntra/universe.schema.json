{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra/schemas/cyntra/universe.schema.json",
  "title": "Cyntra Universe Config",
  "description": "Git-tracked universe registry + policies (v1 draft).",
  "type": "object",
  "required": ["schema_version", "universe_id", "worlds"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "universe_id": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "worlds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["world_id", "world_kind", "path"],
        "properties": {
          "world_id": { "type": "string" },
          "world_kind": {
            "type": "string",
            "enum": ["fab_world", "codebase", "dataset", "simulation"]
          },
          "path": { "type": "string" },
          "enabled": { "type": "boolean" },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    },
    "policies": {
      "type": "object",
      "properties": {
        "determinism": {
          "type": "object",
          "properties": {
            "enforce_cpu_only": { "type": "boolean" },
            "pythonhashseed": { "type": "integer" }
          },
          "additionalProperties": false
        },
        "budgets": {
          "type": "object",
          "properties": {
            "max_concurrent_workcells": { "type": "integer", "minimum": 1 },
            "max_run_minutes": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        },
        "routing_overrides": { "type": "array", "items": { "type": "object" } }
      },
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "swarm_id": { "type": "string" },
        "objective_id": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra/schemas/cyntra/evolve_world.schema.json",
  "title": "Cyntra Evolve World Run",
  "description": "Universe world evolution run summary (v1).",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "generated_at",
    "universe_id",
    "world_id",
    "objective_id",
    "swarm_id",
    "seed",
    "generations",
    "population_size",
    "objectives",
    "genome_id",
    "genes",
    "history"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "cyntra.evolve_world.v1" },
    "run_id": { "type": "string", "minLength": 1 },
    "generated_at": { "type": ["string", "null"], "format": "date-time" },
    "universe_id": { "type": "string", "minLength": 1 },
    "world_id": { "type": "string", "minLength": 1 },
    "objective_id": { "type": "string", "minLength": 1 },
    "swarm_id": { "type": "string", "minLength": 1 },
    "seed": { "type": "integer" },
    "generations": { "type": "integer", "minimum": 1 },
    "population_size": { "type": "integer", "minimum": 1 },
    "objectives": { "type": "object" },
    "genome_id": { "type": "string", "minLength": 1 },
    "genes": { "type": "array", "items": { "type": "string" } },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["generation", "candidates", "selected_run_id"],
        "properties": {
          "generation": { "type": "integer", "minimum": 0 },
          "population_size": { "type": "integer", "minimum": 1 },
          "parent_run_id": { "type": ["string", "null"] },
          "selected_run_id": { "type": ["string", "null"] },
          "selection": { "type": "object" },
          "candidates": { "type": "array", "items": { "type": "object" } }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra/schemas/cyntra/planner_action.schema.json",
  "title": "Cyntra Planner Action",
  "description": "Planner action artifact (finite bins) for swarm topology + budgets selection",
  "type": "object",
  "required": ["schema_version", "created_at", "swarm_id", "budgets"],
  "properties": {
    "schema_version": { "type": "string", "const": "cyntra.planner_action.v1" },
    "created_at": { "type": "string" },
    "swarm_id": { "type": "string" },
    "budgets": {
      "type": "object",
      "required": ["max_minutes_bin", "max_candidates_bin", "max_iterations_bin"],
      "properties": {
        "max_minutes_bin": { "anyOf": [{ "type": "integer" }, { "type": "string" }] },
        "max_candidates_bin": { "anyOf": [{ "type": "integer" }, { "type": "string" }] },
        "max_iterations_bin": { "anyOf": [{ "type": "integer" }, { "type": "string" }] }
      },
      "additionalProperties": false
    },
    "probs": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "number" }
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "abstain_to_default": { "type": "boolean" },
    "reason": { "type": ["string", "null"] },
    "model": {
      "type": "object",
      "required": ["checkpoint_id"],
      "properties": {
        "checkpoint_id": { "type": "string" },
        "version": { "type": ["string", "null"] },
        "git_sha": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "input_hash": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}

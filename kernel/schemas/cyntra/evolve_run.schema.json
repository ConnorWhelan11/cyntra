{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cyntra/schemas/cyntra/evolve_run.schema.json",
  "title": "Cyntra Evolve Run",
  "description": "GEPA evolution run summary",
  "type": "object",
  "required": ["schema_version", "run_id", "bench", "results"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "cyntra.evolve_run.v1"
    },
    "run_id": { "type": "string" },
    "generated_at": { "type": ["string", "null"], "format": "date-time" },
    "bench": { "type": "string" },
    "objectives": { "type": "object" },
    "genome_path": { "type": "string" },
    "results": { "type": "array", "items": { "type": "object" } }
  },
  "additionalProperties": false
}
